<div class="container">
  <div class="row row-users">
    <div class="col-sm-6 col-sm-offset-3">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form-type-costum well-users"}) do |f| %>
          <h1>Connexion</h1>
          <div class="form-frame">
            <div class="pretty-form-group">
                <%= f.email_field :email, autofocus: true %>
                <%= f.label :email %>
            </div>
            <div class="pretty-form-group">
                <%= f.password_field :password,  autocomplete: "off", id:"test" %>
                <%= f.label :password %>
            </div>
            <div class="">
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Se souvenir de moi', class:"checkbox-label" %>
            <% end -%>
            </div>
          </div>
          <div class="form-action-container">
            <%= render "devise/shared/links" %>
            <%= f.submit "Connexion", class: "btn btn-dark" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
