<div class="container-fluid front register-landing" style="background-image:url(<%= asset_path("bg-register"+rand(1..3).to_s+".png") %>)">
  <div class="row row-users">
    <div class="col-sm-5 col-sm-offset-7 full-screen register-form">
        <nav class="register-nav">
          <%= link_to root_path do %><%= image_tag "logo-light.svg" %><% end %>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Inscription", new_registration_path(resource_name), class: "link" %>
          <% end -%>
        </nav>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form-type-costum well-users"}) do |f| %>
          <h1 class="marge-bottom-big">Connexion</h1>

          <div class="pretty-form-group fixe marge-bottom-3-small">
              <%= f.email_field :email, autofocus: true %>
              <%= f.label :email %>
          </div>
          <div class="pretty-form-group fixe marge-bottom-small">
              <%= f.password_field :password,  autocomplete: "off", id:"test" %>
              <%= f.label :password %>
          </div>
          <div class="form-group marge-bottom-big">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Se souvenir de moi', class:"checkbox-label" %>
          <% end -%>
          </div>

          <div class="form-action-container marge-top-medium">
            <%= f.submit "Connexion", class: "btn btn-light" %>
          </div>

        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "light-link bottom-center pad-bottom-big" %>
        <% end -%>
      </div>
    </div>
  </div>

</div>
