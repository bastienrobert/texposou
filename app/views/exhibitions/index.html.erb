<section class="page-header-banner exhibition-banner">
  <div class="title-container">
    <h1>Nos lieux<br>disponibles</h1>
  </div>
</section>

<div class="container grid-parent exhibition-body">
  <div class="row">
    <div class="col-md-3">
      <div class="search-form">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="OÃ¹ ?">
          <button type="submit">Rechercher</button>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <section class="grid-body">
        <% @exhibitions.each do |exhibition| %>
        <% if exhibition.place && exhibition.place.image_places.first %>
          <%= link_to(exhibition) do %>
          <article class="grid-item">
            <%= image_tag exhibition.place.image_places.first.file.url %>
            <div class="content">
              <p class="title"><%= exhibition.name %></p>
              <p class="mention"><%= exhibition.participations.length %> artistes participants</p>

            </div>
          </article>
          <% end %>
          <% end %>
        <% end %>
      </section>
    </div>
  </div>

  <%= link_to 'Voir plus', exhibitions_path, class: "grid-add" %>

</div>
